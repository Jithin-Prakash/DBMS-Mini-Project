<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Appointment Details</title>
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@3.3.7/dist/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
</head>
<body>
  <form id="apform" method="post" name="apsubmit">
    <label for="ptname">Patient Name:</label><br>
    <input type="text" id="ptname" name="ptname" value=""><br>
    <label for="drname">Doctor Name:</label><br>
    <input type="text" id="drname" name="drname"><br>
    <label for="date">Date of Appointment:</label><br>
    <input type="date" id="date" name="date"><br><br>
    
    <input type="submit" value="Submit">
  </form><br><br>


  <table class="table table-striped" >
    <thead>
      <tr>
        <th>Appointment Number</th>
        <th>Patient ID</th>
        <th>Doctor ID</th>
        <th>Appointment Date</th>
      </tr>
    </thead>

    <tbody>
      <% apList.forEach(ap =>{ %>
        <tr>
          <th><%= ap.appointmentNo %></th>
          <th><%= ap.patientId %></th>
          <th><%= ap.doctorId %></th>
          <th><%= String(ap.appointmentDate).substring(4, 15) %></th>
        </tr>
      <% }) %>
    </tbody>
    
  </table><br><br>

  <a href="/">Go back</a>

</body>
</html>